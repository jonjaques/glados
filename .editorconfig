; EditorConfig is awesome: http://EditorConfig.org

; top-most EditorConfig file
root = true

; Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

; Tab indentation (no size specified)
[*.js]
indent_style = tab
indent_size = 2

[*.html]
indent_style = tab
indent_size = 2

[*.css]
indent_style = tab
indent_size = 2

[*.scss]
indent_style = tab
indent_size = 2
